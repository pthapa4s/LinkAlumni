@model LinkAlumni.Models.AddAlumniViewModel

<form method="post" action="Add">
    <h1 class="Heading">Alumni Contact Information</h1>

    <div class="form-group">
        <label for="" class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label for="">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label for="">City</label>
        <input type="text" class="form-control" asp-for="City">
    </div>
    <div class="form-group">
        <label for="">State</label>
        <input type="text" class="form-control" asp-for="State">
    </div>
    <div class="form-group">
        <label for="">Phone Number</label>
        <input type="number" class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>

    <h1>Education Information</h1>

    <div class="form-group">
        <label for="">Graduation Year</label>
        <input type="number" class="form-control" asp-for="GraduationYear">
    </div>
    <div class="form-group">
        <label for="">Degree Recieved</label>
        <input type="text" class="form-control" asp-for="DegreeReceived">
    </div>
    <div class="form-group">
        <label for="">Major Studied</label>
        <input type="text" class="form-control" asp-for="Major">
    </div>
    <div class="form-group">
        <label for="">Post Graduate Degree</label>
        <input type="text" class="form-control" asp-for="PostGraduateDegree">
    </div>
    <div class="form-group">
        <label for="">Certificates</label>
        <input type="text" class="form-control" asp-for="Certificates">
    </div>
    <div class="form-group">
        <label for="">Internships</label>
        <input type="text" class="form-control" asp-for="Internships">
    </div>
    <h1>Employment and Life Update</h1>
    <div class="form-group">
        <label for="">Current Job Title</label>
        <input type="text" class="form-control" asp-for="CurrentJobTitle">
    </div>
    <div class="form-group">
        <label for="">Company Name</label>
        <input type="text" class="form-control" asp-for="CompanyName">
    </div>
    <div class="form-group">
        <label for="">Company Address</label>
        <input type="text" class="form-control" asp-for="CompanyAddress">
    </div>
    <div class="form-group">
        <label for="">Notes</label>
        <input type="text" class="form-control" asp-for="Notes">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>