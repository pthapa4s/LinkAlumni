@model LinkAlumni.Models.PrivateViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
        <style>
            .container{
                display:flex;
                justify-content:center;
                font-family: Calibri, Candara, Segoe, "Segoe UI", Arial Black, Arial, sans-serif;
        }
            .login {
                height: 200px;
                width: 300px;
                background-color: #C8102E;
                border-radius: 10px;
                margin-top: 100px;
            }
            .row{
                margin-top:10px;
                margin-left:10px;
                color:white;
            }
            input{
                width:250px !important;
                border-radius: 5px;
                border-style:none !important;
            }
            #submit{
                width:100px !important;
                position:relative;
                left:70px;
            }
            #submit:hover{
                background-color: #ED2939;
                border-style: none;
                color:white;
            }
        </style>

@using (Html.BeginForm()){
        <div class="container">
                <div class="row">
                    <div class="col-sm login">
                        <div class="row username">
                            @Html.LabelFor(m=>m.UserName, new{ placeholder = "username"})
                            @Html.EditorFor(m=>m.UserName)
                        </div>
                        <div class="row password">
                            @Html.LabelFor(m=>m.Password)
                            <br>
                            @Html.PasswordFor(m=>m.Password , new{ placeholder = "password"})
                            <br>
                        </div>
                        <div class="row">
                           <input type = "submit" value = "Login" id="submit"/>
                        </div>

                    </div>
                </div>
         </div>
}
    </body>
    </html>



